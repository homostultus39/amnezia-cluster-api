# Application
DEVELOPMENT=true

# API Authorization
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin_password

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=amnezia_user
POSTGRES_PASSWORD=securepassword
POSTGRES_DB=amnezia_db

# Redis
REDIS_PASSWORD=your_redis_password
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# MinIO
# Internal Docker network address for MinIO operations
MINIO_INTERNAL_HOST=minio:9000
# Public URL for config file downloads (CHANGE!)
MINIO_PUBLIC_HOST=http://your-ip:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=amnezia-configs
MINIO_SECURE=false
MINIO_PRESIGNED_EXPIRES_SECONDS=3600

# JWT
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=43200
JWT_BLACKLIST_EX=3600
JWT_SECRET_KEY=change-me
JWT_ALGORITHM=HS256

# Server Configuration
SERVER_PUBLIC_HOST=your-server-ip-or-domain
# Name shown in Amnezia VPN app
SERVER_DISPLAY_NAME=My AmneziaWG Server

# Protocols Configuration
# System field
AVAILABLE_PROTOCOLS=amneziawg
DEFAULT_PROTOCOL=amneziawg

# DNS Configuration
PRIMARY_DNS=1.1.1.1
SECONDARY_DNS=1.0.0.1

# WireGuard Configuration
PERSISTENT_KEEPALIVE_SECONDS=25
PEER_ONLINE_THRESHOLD_SECONDS=180

# Client Configuration
CLIENT_DEFAULT_EXPIRATION_DAYS=30

# Network Configuration
DEFAULT_SUBNET_ADDRESS=10.8.1.0

# AmneziaWG Junk Packet Parameters (JSON format)
AWG_JUNK_PARAMS={"Jc": "5", "Jmin": "10", "Jmax": "50", "S1": "0", "S2": "0", "S3": "0", "S4": "0", "H1": "", "H2": "", "H3": "", "H4": "", "I1": "", "I2": "", "I3": "", "I4": "", "I5": ""}

# AmneziaWG Container Configuration
AMNEZIA_CONTAINER_NAME=amnezia-awg2
AMNEZIA_INTERFACE=awg0
AMNEZIA_CONFIG_PATH=/opt/amnezia/awg